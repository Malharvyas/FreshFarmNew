<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:id="@+id/cart_product_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/cart_product_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:id="@+id/cart_product_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/cart_product_img"
        app:layout_constraintTop_toBottomOf="@id/cart_product_name"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="15sp"
        android:textSize="16sp"
        android:id="@+id/cart_product_price"/>

    <TextView
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:text="+"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart_product_price"
        android:layout_marginTop="13sp"
        android:layout_marginRight="38sp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@color/main_color"
        android:id="@+id/plus"
        android:visibility="visible"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="25sp"
        android:textSize="16sp"
        android:text=""
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/minus"
        app:layout_constraintRight_toLeftOf="@id/plus"
        app:layout_constraintTop_toBottomOf="@id/cart_product_price"
        android:layout_marginTop="13sp"
        android:id="@+id/quant_val"
        android:visibility="visible"/>
    <TextView
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:text="-"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/plus"
        app:layout_constraintTop_toBottomOf="@id/cart_product_price"
        android:layout_marginTop="13sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="50sp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@color/main_color"
        android:id="@+id/minus"
        android:visibility="visible"/>



</androidx.constraintlayout.widget.ConstraintLayout>